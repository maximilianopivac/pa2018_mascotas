{
    "name": "mascotas-node-typescript",
    "version": "0.1.0",
    "description": "Server de Masctoas en Node con TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/pa2018_mascotas.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "chalk": "^2.3.1",
        "compression": "^1.7.2",
        "connect-mongo": "^4.4.1",
        "cors": "^2.8.4",
        "dotenv": "^5.0.0",
        "escape-html": "^1.0.3",
        "express": "^4.16.2",
        "express-validator": "^4.2.0",
        "helmet": "^3.11.0",
        "ioredis": "^3.2.2",
        "jsonwebtoken": "^8.1.1",
        "mongoose": "^5.13.0",
        "morgan": "^1.9.0",
        "node-cache": "^4.1.1",
        "passport": "^0.4.0",
        "passport-jwt": "^3.0.1",
        "uuid": "^3.2.1",
        "winston": "^2.4.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.16.8",
        "@types/compression": "^0.0.35",
        "@types/connect-mongo": "^0.0.35",
        "@types/cors": "^2.8.3",
        "@types/dotenv": "^4.0.2",
        "@types/escape-html": "^0.0.20",
        "@types/express-session": "1.15.16",
        "@types/express": "^4.11.1",
        "@types/helmet": "^0.0.37",
        "@types/ioredis": "^3.2.5",
        "@types/jasmine": "2.8.8",
        "@types/jest": "^21.1.3",
        "@types/jsonwebtoken": "^7.2.5",
        "@types/mongodb": "^3.6.18",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.7.35",
        "@types/node": "^8.9.4",
        "@types/node-cache": "^4.1.1",
        "@types/passport": "^0.4.3",
        "@types/passport-jwt": "^3.0.1",
        "@types/uuid": "^3.4.3",
        "@types/winston": "^2.3.8",
        "apidoc": "^0.28.1",
        "apidoc-markdown2": "0.3.6",
        "concurrently": "^3.5.1",
        "depcheck": "^1.4.2",
        "nodemon": "^2.0.8",
        "shelljs": "^0.8.1",
        "tslint": "^5.9.1",
        "typescript": "^4.3.4"
    }
}
